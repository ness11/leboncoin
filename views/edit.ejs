<% include partials/header.ejs %>

<section>


    <section class="container">
        <div class="top">
            <div>
                <div class="banderole">Votre annonce</div>
                <form action="/annonce/<%=id%>/edit" method="POST" enctype="multipart/form-data">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="ad_type" value="offres">
                        <label class="form-check-label" >
                          Offres
                        </label>
                      </div>
                      <div class="form-check">
                        <input class="form-check-input" type="radio" name="ad_type" value="demandes">
                        <label class="form-check-label">
                          Demandes
                        </label>
                      </div>
                      <div class="form-check">
                        <input class="form-check-input" type="radio" name="user_type" value="particulier">
                        <label class="form-check-label" >
                          Particulier
                        </label>
                      </div>
                      <div class="form-check">
                        <input class="form-check-input" type="radio" name="user_type" value="professionnel">
                        <label class="form-check-label">
                          Professionnel
                        </label>
                      </div>
                    <div class="form-group">
                        <label for="formGroupExampleInput">Titre de l'annonce</label>
                        <input type="text" class="form-control" name="title" value="<%=ad.title%>">
                    </div>
                    <div class="form-group">
                        <label for="formGroupExampleInput2">Texte de l'annonce</label>
                        <input type="text" class="form-control" name="description" value="<%=ad.description%>">
                    </div>
                    <div class="form-group">
                        <label for="formGroupExampleInput2">Prix</label>
                        <input type="number" class="form-control" name="price" value="<%=ad.price%>">
                    </div>
                    <div class="form-group">
                        <label for="formGroupExampleInput2">Photo</label>
                        <input type="file" class="form-control" name="photo" value="<%=ad.photo%>">
                    </div>
               
            </div>
                
                
            <div>
                <div class="banderole">Localisation</div>
                    <div class="form-group">
                        <label for="formGroupExampleInput2">Ville ou code postal</label>
                        <input type="text" class="form-control" name="city" value="<%=ad.city%>">
                    </div>
            </div>

            <div>
                <div class="banderole">Vos informations</div>
                    <div class="form-group">
                        <label for="formGroupExampleInput2">Pseudo</label>
                        <input type="text" class="form-control" name="username" value="<%=ad.username%>">
                    </div>
                    <div class="form-group">
                        <label for="formGroupExampleInput2">Email</label>
                        <input type="email" class="form-control" name="Email" value="<%=ad.email%>">
                    </div>
                    <div class="form-group">
                        <label for="formGroupExampleInput2">Téléphone</label>
                        <input type="text" class="form-control" name="phone_number" value="<%=ad.phone_number%>">
                    </div>
                    <div class="form-group">
                        <button type="submit">Modifier</button>
                    </div>
                </form>
            </div>
        </div>
    </section>
</body>
