<% include partials/header.ejs %>
    
   
    <section class="container">
        <div class="top top-home">
            <nav class="nav">
                <a class="nav-link active" href="/offres">Tous</a>
                <a class="nav-link" href="/offres/particulier">Particuliers</a>
                <a class="nav-link" href="/offres/professionnel">Professionnel</a>
            </nav>
            <div class="row row-home ">
                <% for (var i = 0; i < ads.length; i++) {%>
                
                <div class="col-4 d-flex justify-content-center">
                    <img class="photo " src="/uploads/<%=ads[i].photo%>" alt="">
                        
                </div>
                <div class="col-8 d-flex flex-column">
                    <a class="title" href="/annonce/<%=ads[i].id%>"><%=ads[i].title%></a>
                    <p class="city"><%=ads[i].city%></p>
                    <p class="price"><%=ads[i].price%>€</p>
                </div>
                <%}%>
            </div>
            <a href="/deposer">Déposer une annonce</a>
            <ul>
            <% for (var i = 1; i <= count; i++) { %>
                
                
              <a href="?page=<%=i%>"><li><%=i%></li></a>   
            <%}%>
            </ul>
            
        </div>   
    </section>
   
</body>
</html>